<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vicent.shoppinglist.MainActivity">

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelButton"
        android:layout_below="@+id/listTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveButton"
        android:layout_below="@+id/listTitle"
        android:layout_toLeftOf="@+id/cancelButton"
        android:layout_toStartOf="@+id/cancelButton"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp" />

    <TextView
        android:text="List Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/listItem"
        android:layout_below="@+id/saveButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter Item Name..."
        android:ems="10"
        android:layout_marginTop="18dp"
        android:id="@+id/shoppingItem1"
        android:layout_below="@+id/listItem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/saveButton"
        android:layout_alignEnd="@+id/saveButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter Item Name..."
        android:ems="10"
        android:id="@+id/shoppingItem3"
        android:layout_below="@+id/shoppingItem2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_alignRight="@+id/shoppingItem2"
        android:layout_alignEnd="@+id/shoppingItem2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter Item Name..."
        android:ems="10"
        android:id="@+id/shoppingItem4"
        android:layout_below="@+id/shoppingItem3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:layout_alignRight="@+id/shoppingItem3"
        android:layout_alignEnd="@+id/shoppingItem3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter Item Name..."
        android:ems="10"
        android:id="@+id/shoppingItem5"
        android:layout_below="@+id/shoppingItem4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/shoppingItem4"
        android:layout_alignEnd="@+id/shoppingItem4" />

    <Button
        android:text=">"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shoppingItem3"
        android:layout_alignLeft="@+id/addButton2"
        android:layout_alignStart="@+id/addButton2"
        android:id="@+id/addButton3" />

    <Button
        android:text=">"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shoppingItem5"
        android:layout_alignLeft="@+id/addButton4"
        android:layout_alignStart="@+id/addButton4"
        android:id="@+id/addButton5" />

    <Button
        android:text=">"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addButton2"
        android:layout_alignTop="@+id/shoppingItem2"
        android:layout_alignLeft="@+id/addButton1"
        android:layout_alignStart="@+id/addButton1" />

    <Button
        android:text=">"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addButton4"
        android:layout_alignTop="@+id/shoppingItem4"
        android:layout_alignLeft="@+id/addButton3"
        android:layout_alignStart="@+id/addButton3" />

    <Button
        android:text=">"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addButton1"
        android:layout_alignTop="@+id/shoppingItem1"
        android:layout_toRightOf="@+id/saveButton"
        android:layout_toEndOf="@+id/saveButton"
        android:layout_marginLeft="116dp"
        android:layout_marginStart="116dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter Item Name..."
        android:ems="10"
        android:id="@+id/shoppingItem2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/shoppingItem1"
        android:layout_alignEnd="@+id/shoppingItem1" />

    <Button
        android:text="<"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shoppingItem1"
        android:layout_toRightOf="@+id/shoppingItem1"
        android:layout_toEndOf="@+id/shoppingItem1"
        android:id="@+id/lessButton1" />

    <Button
        android:text="<"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addButton2"
        android:layout_toRightOf="@+id/shoppingItem2"
        android:layout_toEndOf="@+id/shoppingItem2"
        android:id="@+id/lessButton2" />

    <Button
        android:text="<"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shoppingItem3"
        android:layout_toRightOf="@+id/shoppingItem3"
        android:layout_toEndOf="@+id/shoppingItem3"
        android:id="@+id/lessButton3" />

    <Button
        android:text="<"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/shoppingItem4"
        android:layout_toRightOf="@+id/shoppingItem4"
        android:layout_toEndOf="@+id/shoppingItem4"
        android:id="@+id/lessButton4" />

    <Button
        android:text="<"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lessButton5"
        android:layout_alignTop="@+id/shoppingItem5"
        android:layout_toRightOf="@+id/shoppingItem5"
        android:layout_toEndOf="@+id/shoppingItem5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/addButton1"
        android:layout_toRightOf="@+id/lessButton1"
        android:layout_toEndOf="@+id/lessButton1"
        android:id="@+id/quantity1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignBottom="@+id/addButton2"
        android:layout_toRightOf="@+id/lessButton2"
        android:layout_toEndOf="@+id/lessButton2"
        android:id="@+id/quantity2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignBottom="@+id/addButton4"
        android:layout_toRightOf="@+id/lessButton4"
        android:layout_toEndOf="@+id/lessButton4"
        android:id="@+id/quantity4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignTop="@+id/addButton5"
        android:layout_toRightOf="@+id/lessButton5"
        android:layout_toEndOf="@+id/lessButton5"
        android:id="@+id/quantity5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/quantity3"
        android:layout_alignBaseline="@+id/addButton3"
        android:layout_alignBottom="@+id/addButton3"
        android:layout_toRightOf="@+id/lessButton3"
        android:layout_toEndOf="@+id/lessButton3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="My Shopping List"
        android:ems="10"
        android:id="@+id/listTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
